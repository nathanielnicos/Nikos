<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.nns.nikos">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nikos">
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".new_wallet.NewWalletActivity"
            android:exported="false"
            android:label="New Wallet" />
        <activity
            android:name=".new_post.PostActivity"
            android:exported="false"
            android:theme="@style/Theme.Nikos.NoActionBar" />
        <activity
            android:name=".detail.DetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Nikos.NoActionBar" />
        <activity
            android:name=".home.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Nikos.NoActionBar" />
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nikos.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>